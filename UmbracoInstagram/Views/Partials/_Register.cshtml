@inherits Umbraco.Web.Mvc.UmbracoViewPage<UmbracoInstagram.Models.MemberModel>
@using (Html.BeginUmbracoForm("SignUp", "Member", System.Web.Mvc.FormMethod.Post, new { id = "login" }))
{
    @Html.AntiForgeryToken()
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { placeholder = "Username" });

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { placeholder = "Username" });

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })

    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Password" })


    @Html.ValidationSummary()
    <button name="login" type="submit">Login</button>
}



